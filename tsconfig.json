{
  "extends": "@gracile/gracile/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": "src",
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": true,
    "isolatedModules": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "~/*": [
        "src/*"
      ]
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
    "types": [
      "bun-types",
      "node",
      "vitest/globals"
    ],
    "useDefineForClassFields": true
  },
  "exclude": [
    "**/node_modules",
    "**/dist",
  ],
  "include": [
    "vite.config.ts",
    "tailwind.config.ts",
    "src/**/*.ts"
  ]
}

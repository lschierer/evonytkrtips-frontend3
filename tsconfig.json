{
  "extends": "@gracile/gracile/tsconfigs/strict",
  "compilerOptions": {
    "target": "ES2022",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "types": [
      "node",
      "vitest/globals"
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
    }
  },
  "include": [
    "server.ts",
    "src/**/*.ts"
, "index.ts"  ],
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/*.js"
  ]
}
